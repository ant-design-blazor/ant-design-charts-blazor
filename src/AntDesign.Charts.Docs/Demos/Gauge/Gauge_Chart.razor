@page "/Gauge_Chart"

<Tabs>
    <TabPane Key="1">
        <Tab>示例1</Tab>
        <ChildContent>
            <Gauge Config="config1" />
        </ChildContent>
    </TabPane>
</Tabs>

<Divider>动手实验</Divider>
<DynamicExample @ref="@example">
    <Gauge @ref="@chart" />
</DynamicExample>

@code{

    public IChartComponent chart;
    DynamicExample example;

    protected override void OnAfterRender(bool firstRender)
    {
        base.OnAfterRender(firstRender);
        example.Chart = chart;
    }

    #region 示例1

    GaugeConfig config1 = new GaugeConfig()
    {
        Title = new Charts.Title()
        {
            Visible = true,
            Text = "仪表盘",
        },
        Width = 400,
        Height = 400,
        Percent = (decimal?)0.75,
        Min = 0,
        Max = 100,
        Range = new double[] { 0, 25, 50, 75, 100 },
        Color = new string[] { "#39B8FF", "#52619B", "#43E089", "#C0EDF3" },
        Statistic = new GaugeStatistic()
        {
            Visible = true,
            Text = "优",
            Color = "#30bf78",
        },
    };

    #endregion 示例1


}

