@page "/Started"
<Row>
    <AntDesign.Col Span="12">
        <AntDesign.Charts.Column @ref="chart" />

    </AntDesign.Col>
    <AntDesign.Col Span="12">
        <Row>
            <AntDesign.Col Span="12">
                <Text>配置</Text>
                @*<TextArea MinRows="25" @bind-Value="@jsonConfig" />*@
                <TextArea MinRows="25" @bind-Value="@jsConfig" />
            </AntDesign.Col>
            <AntDesign.Col Span="12">
                <Text>数据</Text>
                <TextArea MinRows="25" @bind-Value="@jsonData" />
            </AntDesign.Col>
        </Row>
        <Divider></Divider>
        <Space>

            <SpaceItem>
                <Button Type="primary" OnClick="OnApply">应用</Button>
            </SpaceItem>

        </Space>



    </AntDesign.Col>
</Row>

@code{

    string jsonConfig = @"{
    ""forceFit"" : ""true"",
    ""xField"" : ""year"",
    ""yField"" : ""value""
}";

    string jsConfig = @" {
  xField: 'year',
  yField: 'value',
  label: {
    // 可手动配置 label 数据标签位置
    position: 'middle', // 'top', 'bottom', 'middle',
    // 配置样式
    style: {
      fill: '#FFFFFF',
      opacity: 0.6,
    },
  },
  xAxis: {
    label: {
      autoHide: true,
      autoRotate: false,
    },
  },
}";

    string jsonData = @"[
    { ""year"": ""1991"", ""value"": 3 },
    { ""year"": ""1992"", ""value"": 4 },
    { ""year"": ""1993"", ""value"": 3.5 },
    { ""year"": ""1994"", ""value"": 5 },
    { ""year"": ""1995"", ""value"": 4.9 },
    { ""year"": ""1996"", ""value"": 6 },
    { ""year"": ""1997"", ""value"": 7 },
    { ""year"": ""1998"", ""value"": 9 },
    { ""year"": ""1999"", ""value"": 13 }
]";

    IChartComponent chart;

    public async void OnApply()
    {

        var data = System.Text.Json.JsonSerializer.Deserialize<object>
            (jsonData);

        await chart.UpdateChart(jsConfig: jsConfig, data: data);
        //jsonConfig:jsonConfig
    }

}
