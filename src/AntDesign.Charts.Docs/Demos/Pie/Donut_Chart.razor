@page "/Donut_Chart"

<Tabs>
    <TabPane Key="1">
        <Tab>示例1</Tab>
        <ChildContent>
            <Pie Data=data1 Config="config1" />
        </ChildContent>
    </TabPane>
</Tabs>


<Divider>动手实验</Divider>
<DynamicExample @ref="@example">
